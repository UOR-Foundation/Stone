{
  "name": "@uor-foundation/stone",
  "version": "0.5.0-beta",
  "description": "A software factory for GitHub-based development using Claude Code",
  "main": "dist/index.js",
  "bin": {
    "stone": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:dashboard": "vite build src/dashboard --outDir ../../dist/dashboard",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src/**/*.{ts,tsx} --config eslint.config.js",
    "lint:fix": "eslint src/**/*.{ts,tsx} --config eslint.config.js --fix",
    "prepublishOnly": "pnpm run build",
    "start": "node dist/cli/index.js",
    "start:dashboard": "vite dev src/dashboard --port 3000",
    "metrics": "node dist/performance/metrics-server.js",
    "validate-schemas": "ts-node scripts/validate-schemas.ts"
  },
  "keywords": [
    "github",
    "software",
    "factory",
    "claude",
    "anthropic",
    "ai",
    "automation"
  ],
  "author": "UOR Foundation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UOR-Foundation/Stone.git"
  },
  "bugs": {
    "url": "https://github.com/UOR-Foundation/Stone/issues"
  },
  "homepage": "https://github.com/UOR-Foundation/Stone#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.26.10",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/micromatch": "^4.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.17",
    "@types/open": "^6.2.1",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "eslint": "^9.26.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "mocha": "^11.2.2",
    "nock": "^14.0.4",
    "postcss": "^8.4.38",
    "rimraf": "^6.0.1",
    "sinon": "^20.0.0",
    "sinon-chai": "^4.0.0",
    "tailwindcss": "^4.1.7",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "inquirer": "^12.6.1",
    "joi": "^17.13.3",
    "js-yaml": "^4.1.0",
    "marked": "^15.0.11",
    "micromatch": "^4.0.5",
    "node-fetch": "^3.3.2",
    "octokit": "^4.1.3",
    "open": "^10.1.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "recharts": "^2.12.3"
  }
}
