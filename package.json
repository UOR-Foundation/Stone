{
  "name": "@uor-foundation/stone",
  "version": "0.1.0",
  "description": "A software factory for GitHub-based development using Claude Code",
  "main": "dist/index.js",
  "bin": {
    "stone": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "lint": "eslint src/**/*.ts --config eslint.config.js",
    "lint:fix": "eslint src/**/*.ts --config eslint.config.js --fix",
    "prepublishOnly": "npm run build",
    "start": "node dist/cli/index.js"
  },
  "keywords": [
    "github",
    "software",
    "factory",
    "claude",
    "anthropic",
    "ai",
    "automation"
  ],
  "author": "UOR Foundation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UOR-Foundation/Stone.git"
  },
  "bugs": {
    "url": "https://github.com/UOR-Foundation/Stone/issues"
  },
  "homepage": "https://github.com/UOR-Foundation/Stone#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/micromatch": "^4.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.14",
    "@types/open": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "eslint": "^9.23.0",
    "jest": "^29.7.0",
    "mocha": "^11.1.0",
    "rimraf": "^6.0.1",
    "sinon": "^20.0.0",
    "sinon-chai": "^3.7.0",
    "ts-jest": "^29.3.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "inquirer": "^12.5.0",
    "joi": "^17.13.3",
    "js-yaml": "^4.1.0",
    "marked": "^15.0.7",
    "micromatch": "^4.0.5",
    "node-fetch": "^3.3.2",
    "octokit": "^4.1.2",
    "open": "^10.1.0"
  }
